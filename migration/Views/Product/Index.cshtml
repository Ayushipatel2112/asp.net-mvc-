@{
	Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@model IEnumerable<Product>

<h1>Product</h1>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Price</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.Name</td>
				<td>@product.Price</td>
				<td>
					<a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-primary">Edit</a> |
					<a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>
	
</table>